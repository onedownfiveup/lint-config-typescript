{
  "defaultSeverity": "error",
  "extends": [
    "tslint:recommended",
    "tslint-eslint-rules"
  ],
  "jsRules": {},
  "rules": {
    "array-bracket-spacing": [true, "never"],
    "await-promise": true,
    "ban-comma-operator": true,
    "block-spacing": [true, "always"],
    "brace-style": [true, "1tbs", {"allowSingleLine": true}],
    "curly": [true, "ignore-same-line"],
    "encoding": true,
    "indent": [true, "spaces", 2],
    "indent": [true, 2, {"SwitchCase": 1}],
    "interface-name": [false],
    "linebreak-style": [true, "LF"],
    "no-constant-condition": true,
    "no-control-regex": true,
    "no-duplicate-case": true,
    "no-duplicate-switch-case": true,
    "no-dynamic-delete": true,
    "no-empty-character-class": true,
    "no-ex-assign": true,
    "no-extra-boolean-cast": true,
    "no-extra-semi": true,
    "no-floating-promises": true,
    "no-for-in-array": true,
    "no-implicit-dependencies": [true, "dev"],
    "no-invalid-this": true,
    "no-irregular-whitespace": true,
    "no-magic-numbers": true,
    "no-multi-spaces": true,
    "no-non-null-assertion": true,
    "no-redundant-jsdoc": true,
    "no-require-imports": true,
    "no-return-await": true,
    "no-sparse-arrays": true,
    "no-switch-case-fall-through": true,
    "no-this-assignment": [true, {"allow-destructuring": true}],
    "no-unexpected-multiline": true,
    "no-unnecessary-class": ["allow-constructor-only", "allow-empty-class"],
    "no-unnecessary-qualifier": true,
    "no-unused-variable": [true, {"check-parameters": true, "ignore-pattern": "(^_)|(^defaultProps$)"}],
    "number-literal-format": true,
    "object-curly-spacing": [true, "never"],
    "one-variable-per-declaration": true,
    "prefer-function-over-method": [true, "allow-public", "allow-protected"],
    "prefer-object-spread": true,
    "prefer-readonly": true,
    "prefer-template": true,
    "promise-function-async": true,
    "quotemark": [true, "single", "avoid-escape", "avoid-template"],
    "restrict-plus-operands": true,
    "return-undefined": true,
    "semicolon": [true, "never"],
    "space-in-parens": [true, "never"],
    "space-within-parens": [true, 0],
    "strict-type-predicates": true,
    "switch-final-break": [true, "always"],
    "ter-arrow-body-style": [true, "as-needed"],
    "ter-arrow-parens": [true, "always"],
    "ter-arrow-spacing": true,
    "ter-computed-property-spacing": [true, "never"],
    "ter-func-call-spacing": [true, "never"],
    "ter-padded-blocks": [true, "never"],
    "ter-prefer-arrow-callback": true
  },
  "rulesDirectory": []
}
